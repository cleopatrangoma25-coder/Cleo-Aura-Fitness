rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isTraineeOwner(traineeId) {
      return isSignedIn() && request.auth.uid == traineeId;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion
    }

    // Trainees collection - trainees can read/write their own data
    match /trainees/{traineeId} {
      allow read: if isTraineeOwner(traineeId);
      allow create: if isTraineeOwner(traineeId);
      allow update: if isTraineeOwner(traineeId);
      allow delete: if false; // Prevent deletion

      // Subcollections (workouts, recovery, nutrition, etc.)
      match /{subcollection}/{document=**} {
        allow read, write: if isTraineeOwner(traineeId);
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
